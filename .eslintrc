{
  "extends": [
    "airbnb"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "es6": true,
      "classes": true,
      "modules": true
    }
  },
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "arrow-body-style": [0],
    "arrow-parens": [2, "as-needed"],
    "comma-dangle": [0, "always-multiline"],
    "complexity": [0, 4],
    "curly": [2, "multi-line"],
    "default-case": 0,
    "eqeqeq": 0,
    "indent": [2, 2, { "SwitchCase": 1 }],
    "import/no-unresolved": [0],
    "max-len": [1, 180, 4],
    "no-alert": 0,
    "new-cap": 0,
    "no-console": 0,
    "no-else-return": 0,
    "no-eq-null": 0,
    "no-eval": 0,
    "no-param-reassign": 1,
    "no-underscore-dangle" : 0,
    "no-unused-vars": 1,
    "no-useless-constructor": 1,
    "no-use-before-define": [2, { "functions": false, "classes": true, "variables": true }],
    "no-void": 0,
    "object-curly-spacing": [0, "always"],
    "object-shorthand": [2, "methods", { "ignoreConstructors": true, "avoidExplicitReturnArrows": true }],
    "jsx-a11y/no-noninteractive-element-interactions": [2, {
      "handlers": ["onMouseDown", "onMouseUp", "onKeyPress", "onKeyDown", "onKeyUp"]
    }]
  }
}
